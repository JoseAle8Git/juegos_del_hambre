<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="juego.historiaEliot.controladores.cap1.mercado.ControllerHistoriaEliotCap1_Mercado2"
            prefWidth="1221.0" prefHeight="720.0"
            id="panelAP"
            stylesheets="/css/historiaEliotMercado2.css">

    <ImageView
            AnchorPane.bottomAnchor="60"
            AnchorPane.rightAnchor="30"
            fitHeight="350"
            fitWidth="350">
