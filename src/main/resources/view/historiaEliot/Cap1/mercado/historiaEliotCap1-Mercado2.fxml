            <Image url="/images/personajeGalen.png" />
        </image>
    </ImageView>
    <Label fx:id="fraseLabel" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="60" alignment="CENTER">
        <font>
            <Font name="System Bold" size="20" />
        </font>
    </Label>
    <VBox alignment="CENTER" AnchorPane.bottomAnchor="210" AnchorPane.leftAnchor="300" spacing="30">
        <Label text="Contestar:" styleClass="label-claro" />
        <HBox alignment="CENTER" spacing="60">
            <Button fx:id="opcionA" onAction="#irAOpcionA" />
            <Button fx:id="opcionB" onAction="#irAOpcionB" />
        </HBox>
    </VBox>


</AnchorPane>
